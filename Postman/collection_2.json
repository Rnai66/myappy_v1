{
  "info": {
    "name": "Myappy v1.0.0 API Flow",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:4000/api/auth/register",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "4000",
          "path": [
            "api",
            "auth",
            "register"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Rnai\",\n  \"email\": \"rnai@example.com\",\n  \"password\": \"123456\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "  var json = pm.response.json();",
              "  if (json.token) pm.environment.set('authToken', json.token);",
              "  if (json.user) {",
              "    pm.environment.set('userName', json.user.name);",
              "    pm.environment.set('userEmail', json.user.email);",
              "  }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:4000/api/auth/login",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "4000",
          "path": [
            "api",
            "auth",
            "login"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"rnai@example.com\",\n  \"password\": \"123456\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "  var json = pm.response.json();",
              "  if (json.token) pm.environment.set('authToken', json.token);",
              "  if (json.user) {",
              "    pm.environment.set('userName', json.user.name);",
              "    pm.environment.set('userEmail', json.user.email);",
              "  }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Listings",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "http://localhost:4000/api/listings",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "4000",
          "path": [
            "api",
            "listings"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Listings authorized', function () {",
              "  pm.response.to.have.status(200);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Profile (GET)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "http://localhost:4000/api/auth/profile",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "4000",
          "path": [
            "api",
            "auth",
            "profile"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Profile matches saved user', function () {",
              "  var json = pm.response.json();",
              "  pm.expect(json.email).to.eql(pm.environment.get('userEmail'));",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Profile (PUT Update)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:4000/api/auth/profile",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "4000",
          "path": [
            "api",
            "auth",
            "profile"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Rnai Updated\",\n  \"email\": \"rnai@example.com\",\n  \"password\": \"12345678\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "  var json = pm.response.json();",
              "  pm.environment.set('userName', json.user.name);",
              "  pm.environment.set('userEmail', json.user.email);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Logout (clear env)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:4000/logout-placeholder"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.environment.unset('authToken');",
              "pm.environment.unset('userName');",
              "pm.environment.unset('userEmail');"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}